# Discord Bot Configuration for Human Hunter

# ============================================================================
# Discord Bot Tokens (REQUIRED)
# Get these from Discord Developer Portal: https://discord.com/developers/applications
# ============================================================================

# Main Coordinator Bot Token
DISCORD_MAIN_BOT_TOKEN=YOUR_MAIN_BOT_TOKEN_HERE

# AI Agent Bot Tokens (minimum 4 required, up to 8 supported)
DISCORD_AI_BOT_TOKEN_1=YOUR_AI_BOT_1_TOKEN_HERE
DISCORD_AI_BOT_TOKEN_2=YOUR_AI_BOT_2_TOKEN_HERE
DISCORD_AI_BOT_TOKEN_3=YOUR_AI_BOT_3_TOKEN_HERE
DISCORD_AI_BOT_TOKEN_4=YOUR_AI_BOT_4_TOKEN_HERE

# Optional: Add more AI bots (recommended: 4-6 bots)
# DISCORD_AI_BOT_TOKEN_5=YOUR_AI_BOT_5_TOKEN_HERE
# DISCORD_AI_BOT_TOKEN_6=YOUR_AI_BOT_6_TOKEN_HERE
# DISCORD_AI_BOT_TOKEN_7=YOUR_AI_BOT_7_TOKEN_HERE
# DISCORD_AI_BOT_TOKEN_8=YOUR_AI_BOT_8_TOKEN_HERE

# ============================================================================
# OpenAI Configuration (REQUIRED for AI agents)
# Get your API key from: https://platform.openai.com/api-keys
# ============================================================================

OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# ============================================================================
# Game Configuration (OPTIONAL - defaults shown)
# ============================================================================

# Number of AI players per game (4-8)
NUM_AI_PLAYERS=4

# AI Model Configuration
AI_MODEL_PROVIDER=openai
AI_MODEL_NAME=gpt-4o-mini
AI_TEMPERATURE=0.8

# Game Timing (in seconds)
DISCUSSION_TIME=180  # 3 minutes
VOTING_TIME=60       # 1 minute

# Win Condition
ROUNDS_TO_WIN=3      # Rounds humans must survive to win

# Message Cooldown (seconds between messages)
MESSAGE_COOLDOWN=10

